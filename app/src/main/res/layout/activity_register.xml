<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00683F"
    android:id="@+id/regis"
    android:layout_height="match_parent"
    tools:context=".register">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="REGISTER"
       android:textSize="35sp"
       android:fontFamily="sans-serif-black"
       android:textColor="#fff"
       android:id="@+id/tvreg"
       android:layout_marginTop="180dp"
       android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvreg"
        android:backgroundTint="@color/cardview_light_background"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/et_nama"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nama"/>


    <EditText
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_nama"
        android:backgroundTint="@color/cardview_light_background"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/et_regemail"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Email"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_regemail"
        android:backgroundTint="@color/cardview_light_background"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/et_regpassword"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"/>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded"
        android:text="Daftar"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_regis"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:layout_below="@+id/et_regpassword"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="60dp"/>

    <TextView
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_regis"
        android:id="@+id/text_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"/>


</RelativeLayout>